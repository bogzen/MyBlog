@model IEnumerable<MyBlog.Models.Post>

@{
    ViewBag.Title = "Blog - Profinomad";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="section-content">

<div class="container">
    <div class="row blog-grid-row">

@foreach (var item in Model)
{
        <div class="col-sm-6 col-md-4">
           
            <article class="blog-item">

                <div class="entry-media">

                    <a href="~/Posts/Details/@item.Id" class="el-link">

                        <p class="crop"><img id="PlaceShowImage" src="~/PostsImage/@item.Image" style="width:500px; height:auto" /></p>
                        <div class="entry-overlay"></div>
                    </a>
                </div>

                <div class="entry-date">
                    <img src="~/images/svg/clock.svg" alt="clock icon" class="icon-clock">
                    <span>@item.PublishDate.ToShortDateString()  -  @item.Category.Title</span>
                </div>

                <h2 class="post-title">
                    <a href="~/Posts/Details/@item.Id" style="text-decoration: none">
                        @Html.DisplayFor(modelItem => item.Title)
                    </a>
                </h2>



                <div class="entry-excerpt text-center">
                    <p>
                        @Html.DisplayFor(modelItem => item.Description)
                    </p>
                    <br>
                    <a href="~/Posts/Details/@item.Id" class="button button-fill button-bordered button-small">Read More</a>
                </div>
                <div class="seperator"><span></span></div>
            </article>
        </div>
}
    </div>
</div>
        </section>

@if (Request.IsAuthenticated)
{
<p>
    @Html.ActionLink("Create New Post", "Create")
</p>   
}
